@page "/counter"
@rendermode InteractiveWebAssembly

<PageTitle>Counter</PageTitle>

<div style="border:2px solid var(--accent-base-color) !important;">
    <h1 style="color:var(--accent-base-color) !important;">Counter</h1>

    <div role="status" style="padding-bottom: 1em;">
        Current count: <FluentBadge Appearance="Appearance.Neutral">@currentCount</FluentBadge>
    </div>

    <FluentButton Appearance="Appearance.Outline" @onclick="IncrementCount">Click me</FluentButton>
</div>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
