@inherits LayoutComponentBase
@using InteractiveWebassembly.Components.Pages



<FluentLayout>
    <FluentHeader  >
        InteractiveWebassembly
        <FluentSpacer></FluentSpacer>
        <Settings></Settings>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter Style="height:50px">
        <a href="https://www.fluentui-blazor.net" target="_blank">Documentation and demos</a>
        <FluentSpacer />
        <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor" target="_blank">About Blazor</a>
    </FluentFooter>
    <FluentDialogProvider @rendermode="RenderMode.InteractiveWebAssembly" />
    <FluentDialogProvider @rendermode="RenderMode.InteractiveServer" />
    <FluentToastProvider />
    <FluentTooltipProvider />
    <FluentMessageBarProvider />
    <FluentMenuProvider />

</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
